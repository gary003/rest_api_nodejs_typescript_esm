{
  "author": "Gary Johnson",
  "description": "This is a portfolio project use to show skills",
  "name": "rest_api_nodejs_typescript",
  "version": "1.0.0",
  "main": "./src/bin/server.ts",
  "type": "module",
  "scripts": {
    "start": "npm run clean && docker compose up --build -d",
    "start:dev": "npx tsx watch src/bin/server.ts",
    "stop": "docker compose down --remove-orphans",
    "build:app": "npx tsc -p .",
    "rebuild": "docker compose build --no-cache",
    "minify": "bash ./scripts/minify_p.sh",
    "docker:logs:app": "docker logs $(docker ps | grep -- -app | awk '{print $1}')",
    "docker:logs:db": "docker logs $(docker ps | grep -- -db | awk '{print $1}')",
    "docker:build:image": "docker build -t gary003/rest_api_nodejs_typescript .",
    "docker:launch:app": "npx pm2-docker start ./dist/bin/server.js",
    "clean": "npm run stop && npm run clean:pm2 && npm run clean:volumes",
    "clean:pm2": " npx pm2 kill",
    "clean:docker": "docker system prune -af --volumes || true",
    "clean:volumes": "docker volume prune -f || true",
    "clean:images": "docker image prune -af || true",
    "lint": "npx eslint .",
    "test": "npm run lint && npm run clean && npx vitest run --coverage './tests/integration' './tests/unit/v1'",
    "test:integration": "npm run clean && npx vitest run --coverage './tests/integration'",
    "test:performance": "npx mocha -r ts-node/register './tests/performance'",
    "test:unit:v1": "npm run clean && npx vitest run --coverage './tests/unit/v1'"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@opentelemetry/winston-transport": "^0.14.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "ip": "^1.1.5",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.5",
    "mysql2": "^3.12.0",
    "pm2": "^5.3.1",
    "redis": "^4.7.1",
    "typeorm": "^0.3.20",
    "uuid": "^8.3.2",
    "winston": "^3.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/chai": "^4.3.1",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/ip": "^1.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^9.1.1",
    "@types/node": "^25.0.1",
    "@types/node-fetch": "^2.6.12",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitest/coverage-v8": "^4.0.16",
    "chai": "^4.3.6",
    "eslint": "^9.20.1",
    "openapi3-ts": "^4.4.0",
    "prettier": "^3.5.1",
    "sinon": "^21.0.0",
    "supertest": "^6.2.3",
    "swagger-ui-express": "^5.0.1",
    "testcontainers": "^10.16.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^4.0.16"
  },
  "license": "MIT"
}
